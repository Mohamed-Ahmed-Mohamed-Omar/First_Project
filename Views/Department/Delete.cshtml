@model First_Project.Models.DepartmentVM

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Department</h2>

<form asp-controller="Department" asp-action="Delete" method="post" class="form-group">

    <label asp-for="DepartmentName">Department Name</label>
    <input type="text" asp-for="DepartmentName" disabled class="form-control" />
    <br />

    <label asp-for="DepartmentCode">Department Code</label>
    <input type="text" asp-for="DepartmentCode" disabled class="form-control" />

    <br />

    <center>
        <input type="submit" value="Delete" class="btn btn-outline-danger" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back TO List</a>
    </center>

</form>