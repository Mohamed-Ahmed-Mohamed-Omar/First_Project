@model First_Project.Models.StudentVM

@{
    ViewBag.Title = "Delete Student";
}

<h2>Delete Student</h2>
<br />

<form asp-controller="Student" asp-action="Delete" class="form-group">

    <label asp-for="Name">Student Name</label>
    <input readonly type="text" asp-for="Name" class="form-control" />
    <br />

    <label asp-for="Email">Student E_mail</label>
    <input readonly type="text" asp-for="Email" class="form-control" />
    <br />

    <label asp-for="Phone">Student Phone</label>
    <input readonly type="text" asp-for="Phone" class="form-control" />
    <br />

    <label asp-for="Age">Student Age</label>
    <input readonly type="text" asp-for="Age" class="form-control" />
    <br />

    <label asp-for="Address">Student Address</label>
    <input readonly type="text" asp-for="Address" class="form-control" />
    <br />

    <label asp-for="GPA">GPA</label>
    <input readonly type="text" asp-for="GPA" class="form-control" />
    <br />

    <label asp-for="Start_Education">Student Start Education</label>
    <input readonly type="date" asp-for="Start_Education" class="form-control" />
    <br />

    <label asp-for="End_Education">Student End Education</label>
    <input readonly type="date" asp-for="End_Education" class="form-control" />
    <br />

    <label asp-for="DepartmentId">Department</label>
    <select readonly asp-for="DepartmentId" asp-items="@(SelectList)ViewBag.DepartmentList">
        <option>Choose Department</option>
    </select>
    <br />


    <label asp-for="PhotoUrl">Upload Photo</label>
    <input readonly type="file" asp-for="PhotoUrl" class="form-control" />
    <br />

    <label asp-for="CvUrl">Upload Cv</label>
    <input readonly type="file" asp-for="CvUrl" class="form-control" />
    <br />

    <br />
    <center>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-controller="Employee" asp-action="Index" class="btn btn-info">Back To List</a>
    </center>
</form>
